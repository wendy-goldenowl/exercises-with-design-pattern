{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "target": "ES6", // Or "ES2015" or higher
        "lib": [
            "ES6",
            "DOM"
        ],
        "types": [
            "jest"
        ]
    },
    "include": [
        "Solid/**/*",
        "tests/**/*"
    ]
}